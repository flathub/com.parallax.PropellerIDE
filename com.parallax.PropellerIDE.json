{
    "app-id": "com.parallax.PropellerIDE",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "propelleride",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--device=all"
    ],
    "modules": [
        {
            "name": "propelleride",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/4c0n/PropellerIDE.git",
                    "branch": "flatpak"
                }
            ]
        },
        {
            "name": "openspin",
            "buildsystem": "qmake",
            "subdir": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/bweir/OpenSpin.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "fpc",
            "buildsystem": "simple",
            "build-commands": [
                "sed -i 's/PREFIX=\"$HOME\\/fpc-$VERSION\"/PREFIX=\\/app/g' install.sh",
                "rm -f demo.tar.gz doc-pdf.tar.gz",
                "./install.sh",
                "/app/lib/fpc/3.2.0/samplecfg /app/lib/fpc/3.2.0 /app/etc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "ftp://ftp.hu.freepascal.org/pub/fpc/dist/3.2.0/x86_64-linux/fpc-3.2.0-x86_64-linux.tar",
                    "sha512": "83e7b0489ac532701111684f2e20a67531d445ac009f0f0a1687c2d009d3a9631d4d932b4519345d64750601df877031109f80e7466280289f270422e7f620e5"
                }
            ]
        },
        {
            "name": "propbasic",
            "buildsystem": "simple",
            "build-commands": [
                "cd src && fpc @/app/etc/fpc.cfg -Tlinux -O3 PropBasic.lpr",
                "install -D src/PropBasic /app/bin/propbasic"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/parallaxinc/PropBASIC.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "ide-prebuilts",
            "buildsystem": "simple",
            "build-commands": [
                "install -D linux/bin/bstc /app/bin/bstc",
                "install -D linux/bin/bstl /app/bin/bstl"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/bweir/ide-prebuilts.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "library",
            "buildsystem": "simple",
            "build-commands": [
                "find ./library -type f -exec install -D '{}' '/app/share/propelleride/library/{}' \\;"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/parallaxinc/spin-standard-library.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "doc",
            "buildsystem": "simple",
            "build-commands": [
                "find . -type f -exec install -D '{}' '/app/share/propelleride/doc/{}' \\;"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/parallaxinc/spin-docs.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "libusb",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libusb/libusb.git",
                    "tag": "v1.0.23"
                }
            ]
        },
        {
            "name": "libconfuse",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libconfuse/libconfuse.git",
                    "tag": "v3.3"
                }
            ]
        },
        {
            "name": "libftdi",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "git://developer.intra2net.com/libftdi",
                    "tag": "v1.5"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 com.parallax.PropellerIDE.desktop /app/share/applications/com.parallax.PropellerIDE.desktop",
                "install -Dm644 com.parallax.PropellerIDE.svg /app/share/icons/hicolor/scalable/apps/com.parallax.PropellerIDE.svg",
                "install -Dm544 com.parallax.PropellerIDE.metainfo.xml /app/share/metainfo/com.parallax.PropellerIDE.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "com.parallax.PropellerIDE.desktop"
                },
                {
                    "type": "file",
                    "path": "com.parallax.PropellerIDE.svg"
                },
                {
                    "type": "file",
                    "path": "com.parallax.PropellerIDE.appdata.xml"
                }
            ]
        }
    ]
}
